[includeIf "hasconfig:remote.*.url:ssh://git@bitbucket.microchip.com/*/**"]
  path = ~/.gitconfig-work

[alias]
  gone = "! git fetch -p && git for-each-ref --format '%(refname:short) %(upstream:track)' | awk '$2 == \"[gone]\" { print $1}' | xargs -r git branch -D"

[fetch]
  prune = true

[init]
  defaultBranch = main

[core]
  editor = nvim
  excludesFile = ~/.gitignore
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  dark = true
  navigate = true
  line-numbers = true
  side-by-side = true

[merge]
  conflictstyle = diff3

[merge "mergiraf"]
  name = mergiraf
  driver = mergiraf merge --git %O %A %B -s %S -x %X -y %Y -p %P -l %L


[diff]
  colorMoved = no

[commit]
  gpgsign = true

[pager]
  branch = false

[column]
  ui = auto

[branch]
  sort = -committerdate

[rerere]
  enabled = true

