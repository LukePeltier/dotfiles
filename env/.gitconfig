[user]
  name = Luke Peltier
  email = luke@lukepeltier.com
  signingkey = $HOME/.ssh/id_ed25519.pub


[includeIf "hasconfig:remote.*.url:git@bitbucket.microchip.com:*/**"]
  path = ~/.gitconfig-work

[alias]
  gone = "! git fetch -p && git for-each-ref --format '%(refname:short) %(upstream:track)' | awk '$2 == \"[gone]\" { print $1}' | xargs -r git branch -D"

[fetch]
  prune = true

[init]
  defaultBranch = main

[core]
  editor = nvim
  excludesFile = ~/.gitignore
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  dark = true
  navigate = true
  line-numbers = true
  side-by-side = true
[merge]
  conflictstyle = diff3

[diff]
  colorMoved = no

[gpg]
  format = ssh

[commit]
  gpgsign = true

[pager]
  branch = false

[column]
  ui = auto

[branch]
  sort = -committerdate

[rerere]
  enabled = true

