// Niri configuration - main entry point
// See: https://github.com/YaLTeR/niri/wiki/Configuration:-Overview

// Global settings
hotkey-overlay {
    skip-at-startup
}

prefer-no-csd

screenshot-path "~/Pictures/Screenshots/%Y-%m-%d %H-%M-%S.png"

debug {
    // Allows notification actions and window activation from Noctalia.
    honor-xdg-activation-with-invalid-serial
}

// Autostart applications
include "autostart.kdl"

// Environment variables
include "environment.kdl"

// Input, gestures, and output configuration
include "hardware.kdl"

// Layout settings
include "layout.kdl"

// Window and layer rules
include "window-rules.kdl"

// Key bindings
include "binds.kdl"

// Theme colors (after layout so they take precedence)
include "noctalia.kdl"

include "./noctalia.kdl"
